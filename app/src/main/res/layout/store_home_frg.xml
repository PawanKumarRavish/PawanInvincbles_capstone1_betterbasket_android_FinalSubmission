<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        style="@style/app_form_style"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:text="---"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:id="@+id/mStoreNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/total_money_bg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp">

                <TextView
                    android:id="@+id/mTotalMoneyEarnedTv"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="---"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Money Earned"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/total_active_sales_bg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp">

                <TextView
                    android:id="@+id/mTotalSalesTv"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="---"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Total Sales"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<com.github.mikephil.charting.charts.PieChart
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/mBarChart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"/>-->

            <com.github.mikephil.charting.charts.BarChart
                android:id = "@+id/mBarChart"
                android:layout_width = "fill_parent"
                android:layout_height = "fill_parent" />

        </LinearLayout>





    </LinearLayout>

</LinearLayout>