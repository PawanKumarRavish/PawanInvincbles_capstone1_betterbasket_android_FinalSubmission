<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:gravity="center"
                android:fontFamily="@font/robotto_bold"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="Add New Product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/app_form_style"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:id="@+id/mProductImgLl"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/dotted_bg"
                        android:layout_width="158dp"
                        android:layout_height="113dp">

                        <ImageView
                            android:id="@+id/mProductImg"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_placeholder"
                            android:layout_width="48dp"
                            android:layout_height="34dp">
                        </ImageView>

                        <TextView
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="Upload Image"
                            android:textColor="#929292"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"

                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mNameEt"
                            android:textSize="14dp"
                            android:padding="@dimen/_7sdp"
                            android:background="@drawable/edit_text_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/product_name"
                            android:imeOptions="actionNext"
                            android:maxLength="@integer/phone_max_length"
                            android:singleLine="true">


                        </com.google.android.material.textfield.TextInputEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/mAddProductBtn"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="50dp"
                            android:background="@drawable/button_bg_red"
                            android:gravity="center"
                            android:text="Add Product"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16dp" />

                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>





        </LinearLayout>


    </LinearLayout>

</LinearLayout>